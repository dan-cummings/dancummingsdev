---
 import '../styles/global.css'
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SocialLinks from '../components/SocialLinks.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { marked } from 'marked';
import SkillsList from '../components/SkillsList.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
import Button from '../components/Button.astro';
import { getCollection } from 'astro:content';

type Props = CollectionEntry<'pages'>['data'];

const { title, description, headerImage, content } = Astro.props;

// Fetch recent blog posts (latest 3)
const allPosts = await getCollection('blog');
const recentPosts = allPosts
	.sort((a, b) => b.data.createdAt.valueOf() - a.data.createdAt.valueOf())
	.slice(0, 3);
const skills = [
	{
		title: 'Frontend',
		skills: ['React', 'Vue', 'Astro'],
		icon: 'FE',
	},
	{
		title: 'Backend',
		skills: ['Node.js', 'Python', 'SQL'],
		icon: 'BE',
	},
	{
		title: 'Design',
		skills: ['Figma', 'CSS', 'Tailwind'],
		icon: 'UI',
	},
	{
		title: 'Tools',
		skills: ['Git', 'Docker', 'AWS'],
		icon: '‚öôÔ∏è',
	},
];

const experiences = [
	{
		icon: 'üéì',
		title: 'Bachelor of Science in Computer Science',
		company: 'Grand Valley State University',
		date: '2018',
		description: 'Focused on software engineering, algorithms, and web development. Graduated with honors and a passion for creating digital solutions.',
	},
	{
		icon: 'üíº',
		title: 'Technical Product Specialist',
		company: 'Dynatrace',
		date: '2018-2021',
		description: 'Supported the Dynatrace product by providing technical assistance to customers and partners.',
	},
	{
		icon: 'üíº',
		title: 'Support Architect',
		company: 'Dynatrace',
		date: '2021-2022',
		description: 'Created a support framework for the Dynatrace product to help support engineers.',
	},
];
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<main class="w-[calc(100%)] max-w-full m-0 p-0">
		
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(35,55,255,0.15)_1px,transparent_0)] bg-[length:20px_20px]"></div>
			<div class="relative z-10 w-full max-w-6xl mx-auto px-4 py-16">
				<div class="grid lg:grid-cols-2 gap-12 items-center">
					<!-- Profile Content -->
					<div class="text-center lg:text-left">
						<div class="mb-6">
							<div set:html={marked(content.markdown)} />
						</div>
						
						<!-- CTA Buttons -->
						<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
							<Button href="#contact" variant="primary">
								Get In Touch
								<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
								</svg>
							</Button>
							<Button href="/blog" variant="secondary">
								Read My Blog
							</Button>
						</div>
					</div>
					
					<!-- Profile Image -->
					<div class="relative">
						<div class="relative z-10">
                            <Image 
                                width={headerImage.width} 
                                height={headerImage.height} 
                                src={headerImage.url} 
                                alt="Profile picture" 
                                class="w-full mx-auto rounded-3xl shadow-2xl"
                            />
						</div>
						<!-- Decorative elements -->
						<div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full opacity-20 blur-xl"></div>
						<div class="absolute -bottom-8 -left-8 w-32 h-32 bg-gradient-to-tr from-pink-400 to-orange-400 rounded-full opacity-20 blur-xl"></div>
					</div>
				</div>
			</div>
		</section>

		<!-- Recent Blog Posts Section -->
		<section class="py-20 bg-gradient-to-b from-white to-gray-50">
			<div class="w-full max-w-6xl mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-gray-900 mb-4">Recent Blog Posts</h2>
					<p class="text-xl text-gray-600">Latest thoughts and insights from my blog</p>
				</div>

				<div class="grid md:grid-cols-3 gap-8 mb-8">
					{recentPosts.map((post) => (
						<article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
							<a href={`/blog/${post.data.slug}/`} class="block no-underline">
								{post.data.headerImage && (
									<div class="aspect-video overflow-hidden">
										<Image
											width={400}
											height={225}
											src={post.data.headerImage.url}
											alt={post.data.title}
											class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
										/>
									</div>
								)}
								<div class="p-6">
									<h3 class="text-xl font-bold text-gray-900 mb-2 hover:text-blue-600 transition-colors">{post.data.title}</h3>
									<p class="text-gray-600 mb-4">{post.data.description}</p>
									<div class="flex items-center text-sm text-gray-500">
										<FormattedDate date={new Date(post.data.createdAt)} />
									</div>
								</div>
							</a>
						</article>
					))}
				</div>

				<div class="text-center">
					<Button href="/blog" variant="secondary">
						View All Posts
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
						</svg>
					</Button>
				</div>
			</div>
		</section>

		<SkillsList skills={skills} />

		<!-- Experience Timeline -->
		<ExperienceTimeline experiences={experiences} />

		<!-- Contact Section -->
		<section id="contact" class="py-20 bg-gradient-to-br from-blue-600 via-purple-600 to-pink-600">
			<div class="w-full max-w-4xl mx-auto px-4 text-center">
				<h2 class="text-4xl font-bold text-white mb-6">Let's Work Together</h2>
				<p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
					I'm always excited to discuss new opportunities, collaborate on interesting projects, or just chat about technology.
				</p>
				
				<div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-8">
					<Button href="mailto:hello@example.com" class="bg-white text-gray-800 hover:bg-gray-100">
						<svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
						Send me an email
					</Button>

					<Button href="/blog" class="border-2 border-white text-white hover:bg-white hover:text-gray-800">
						Read my latest post
					</Button>
				</div>
				
				<div class="flex justify-center">
					<div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6">
						<SocialLinks />
					</div>
				</div>
			</div>
		</section>

		<!-- Main Content Slot -->
		<main class="py-20 bg-white">
			<div class="w-full max-w-4xl mx-auto px-4">
				<div class="prose prose-lg max-w-none">
					<slot />
				</div>
			</div>
		</main>

		<Footer />
	</main>
	</body>
</html>
