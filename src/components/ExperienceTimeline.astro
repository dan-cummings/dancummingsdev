---
import Experience from './Experience.astro';


interface Props {
    experiences: {
        icon: string;
        title: string;
        company: string;
        date: string;
        description: string;
    }[];
}

const { experiences } = Astro.props;
---

<section id="experience" class="py-20 bg-gray-50">
    <div class="w-full max-w-4xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">My Journey</h2>
            <p class="text-xl text-dark-cyan">
                The path that led me to where I am today
            </p>
        </div>
        
        <div class="space-y-8">
            {experiences.map((experience) => (
                <Experience {...experience} />
            ))}
        </div>
    </div>
</section>