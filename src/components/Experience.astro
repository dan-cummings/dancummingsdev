---
interface Props {
    icon: string;
    title: string;
    company: string;
    date: string;
    description: string;
}


const { title, company, date, description, icon } = Astro.props;
---

<div class="relative pl-8 before:absolute before:left-0 before:top-2 before:w-3 before:h-3 before:bg-blue-600 before:rounded-full before:border-4 before:border-white before:shadow-lg after:absolute after:left-1.5 after:top-6 after:w-0.5 after:h-full after:bg-gradient-to-b after:from-blue-600 after:to-transparent last:after:hidden">
    <div class="card">
        <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-400 rounded-2xl flex items-center justify-center">
                    <span class="font-bold text-xl">{icon}</span>
                </div>
            </div>
            <div class="flex-grow">
                <h3 class="text-xl font-bold mb-2">{title}</h3>
                <p class=" mb-2">{company}</p>
                <p class="text-sm mb-3">{date}</p>
                <p>
                    {description}
                </p>
            </div>
        </div>
    </div>