---
interface Props {
    icon: string;
    title: string;
    skills: string[];
}

const { title, skills, icon } = Astro.props;
---


<div class="card">
    <div class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-xl flex items-center justify-center">
            <span class="text-white font-bold text-lg">{icon}</span>
        </div>
        <h3 class="font-semibold text-dark-cyan mb-2">{title}</h3>
        <div class="flex flex-wrap gap-2 justify-center">
            {skills.map((skill) => (
                <span class="bg-gradient-to-br from-blue-50 to-purple-50 border border-blue-200 px-3 py-1 rounded-full text-sm font-medium transition-all duration-300 hover:from-blue-100 hover:to-purple-100 hover:border-blue-300 hover:scale-105">{skill}</span>
            ))}
        </div>
    </div>
</div>